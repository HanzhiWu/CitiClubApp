<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.BusinessHallPage.SearchPage.SearchResultActivity">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.example.citiclubapp.widgetLayout.InsideTitle
            android:id="@+id/inside_search_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.example.citiclubapp.widgetLayout.InsideTitle>

    </LinearLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:paddingLeft="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        app:layout_constraintVertical_bias="0.506">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.example.citiclubapp.widgetLayout.ItemInfo
                android:id="@+id/warrantNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </com.example.citiclubapp.widgetLayout.ItemInfo>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="仓单详情"
                android:textColor="#000000"
                android:textSize="20sp"></TextView>

            <com.example.citiclubapp.widgetLayout.ItemInfo
                android:id="@+id/cargo_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </com.example.citiclubapp.widgetLayout.ItemInfo>

            <com.example.citiclubapp.widgetLayout.ItemInfo
                android:id="@+id/cargo_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </com.example.citiclubapp.widgetLayout.ItemInfo>

            <com.example.citiclubapp.widgetLayout.ItemInfo
                android:id="@+id/cargo_owner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </com.example.citiclubapp.widgetLayout.ItemInfo>

            <com.example.citiclubapp.widgetLayout.ItemInfo
                android:id="@+id/storage_expand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </com.example.citiclubapp.widgetLayout.ItemInfo>

            <com.example.citiclubapp.widgetLayout.ItemInfo
                android:id="@+id/storage_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </com.example.citiclubapp.widgetLayout.ItemInfo>

            <com.example.citiclubapp.widgetLayout.ItemInfo
                android:id="@+id/storage_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </com.example.citiclubapp.widgetLayout.ItemInfo>

            <com.example.citiclubapp.widgetLayout.ItemInfo
                android:id="@+id/preparing_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </com.example.citiclubapp.widgetLayout.ItemInfo>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>